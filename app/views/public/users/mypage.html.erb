<h2>マイページ</h2>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="user-profile">
    <!-- ユーザー名 -->
    <h1><%= @user.name %></h1>
  
    <!-- ユーザー画像 -->
    <div class="profile-image">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "150x150", alt: @user.name %>
      <% else %>
        <%= image_tag "no-image.jpeg", alt: "デフォルトのプロフィール画像", size: "150x150" %>
      <% end %>
    </div>
  
    <!-- ユーザー自己紹介 -->
    <p><%= @user.introduction.presence || "自己紹介はまだありません。" %></p>
  
    <!-- ユーザー編集ページへのリンク -->
    <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-primary" %>
  
    <!-- フォロー数（リンク付き） -->
    <div class="user-follow">
      <p>
        <%= link_to "#{@user.followings.count} フォロー", followings_user_path(@user), class: "btn btn-link" %>
        <%= link_to "#{@user.followers.count} フォロワー", followers_user_path(@user), class: "btn btn-link" %>
      </p>
    </div>
   </div>
  <!-- ユーザーいいね投稿一覧へのリンク -->
  <div class="user-likes-posts">
    <%= link_to user_post_likes_path(@user) do  %>
      <p>あなたのいいねした投稿一覧</p>
    <% end %>
  </div>
  
  <!-- ユーザーいいねチケット一覧へのリンク -->
  <div class="user-likes-tickets">
    <%= link_to user_ticket_likes_path(@user) do  %>
      <p>あなたのいいねしたチケット一覧</p>
    <% end %>
  </div>
  
  <!-- ユーザー所有チケット一覧へのリンク -->
  <div class="received_tickets">
    <%= link_to user_tickets_path(@user) do  %>
      <p>あなたの所有チケット一覧</p>
    <% end %>
  </div>
  
  <!-- ユーザー発行チケット一覧へのリンク -->
  <div class="issued_tickets">
    <%= link_to user_issued_tickets_path(@user) do  %>
      <p>あなたの発行したチケット一覧</p>
    <% end %>
  </div>
  
  <!-- ユーザー投稿 -->
  <div class="user-posts">
    <% if @user.posts.any? %>
      <% @user.posts.each do |post| %>
      
        <p><%= post.text_content %></p>
        
        <% if post.ticket_id.present? %>
          <p><%= post.ticket.name %></p>
        <% end %>
        
        <% if post.image.attached? %>
          <%= post.image %>
        <% end %>
        
      <% end %>
    <% else %>
      <p>まだ投稿がありません</p>
    <% end %>
  </div>
  
  
  </div>
</div>
