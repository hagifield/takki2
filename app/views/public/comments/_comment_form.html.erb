<%= form_with(model: [commentable, Comment.new], local: true) do |form| %>
  <div class="form-group">
    <%= form.text_area :content, placeholder: "コメントを入力してください", class: "form-control", rows: 3 %>
  </div>
  <div class="form-group">
    <%= form.submit "コメントを投稿", class: "btn btn-primary" %>
  </div>
<% end %>
